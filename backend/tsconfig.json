{
	"compilerOptions": {
		"target": "ES2022",
		"module": "nodenext",
		"lib": ["ES2023"],
		"outDir": "./dist",
		"rootDir": "./src",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"moduleResolution": "nodenext",
		"resolveJsonModule": true,
		"baseUrl": ".",
		"allowImportingTsExtensions": true,
		"noEmit": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "**/*.test.ts"]
}
